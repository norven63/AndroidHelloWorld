<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.myAndroid.helloworld.customView.dragToFresh.DragToFreshLayout
        android:id="@+id/dragToFreshListView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="开始刷新" />
    </com.myAndroid.helloworld.customView.dragToFresh.DragToFreshLayout>

    <com.myAndroid.helloworld.customView.dragToFresh.DragToFreshScrollView
        android:id="@+id/dragToFreshScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.myAndroid.helloworld.customView.dragToFresh.MyGridView
            android:id="@+id/myGivdView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3" />
    </com.myAndroid.helloworld.customView.dragToFresh.DragToFreshScrollView>

</LinearLayout>