<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.6"
    android:background="@drawable/test_image"
    android:columnCount="3"
    android:orientation="horizontal"
    android:rowCount="4" >

    <LinearLayout
        android:id="@+id/luncherLayout_1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/shape_normal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/luncherImage_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/image_view1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/luncherLayout_2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/shape_normal"
        android:orientation="vertical" >
    </LinearLayout>

    <ImageView
        android:id="@+id/luncherImage_2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/image_view2" />

</GridLayout>