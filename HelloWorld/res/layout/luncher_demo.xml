            android:layout_marginTop="5dp"
            android:background="@drawable/test_button7" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/test_button5" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/test_button3" />

        <ImageView
            android:id="@+id/luncherImage_5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/test_button8" />
    </GridLayout>
    <LinearLayout
        android:id="@+id/cellLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:alpha="0.7"
        android:layout_gravity="bottom"
        android:background="@color/gray"
        android:orientation="vertical" />

</FrameLayout>